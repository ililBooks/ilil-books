{
  "analysis": {
    "analyzer": {
      "korean_analyzer": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": [
          "lowercase",
          "nori_part_of_speech_filter",
          "my_stop_filter"
        ]
      }
    },
    "filter": {
      "nori_part_of_speech_filter": {
        "type": "nori_part_of_speech",
        "stoptags": ["E", "IC", "J", "MAG", "MAJ", "MM", "SP", "SSC", "SSO", "SC", "SE", "XPN", "XSA", "XSN", "XSV", "UNA", "NA", "VSV"]
      },
      "my_stop_filter": {
        "type": "stop",
        "stopwords": ["그리고", "입니다", "저는", "하지만", "이것은", "그것은"]
      }
    }
  }
}
